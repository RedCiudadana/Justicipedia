<div class="container-fluid {{if (eq model.firstObject._internalModel.modelName "profile") "blue-pattern" "dark-pattern"}} ">
  <div class="row justify-content-center text-center">
    <div class="col-md-12 pt-5">
      {{#if (not-eq model.firstObject._internalModel.modelName "profile")}}
        <img src="img/icons/search.png" alt="Lupa">
      {{/if}}
      <h1 class="text-white">
        Buscar perfiles
      </h1>
    </div>
    <div class="col-12 col-md-8 col-lg-6 pb-5">
      <PowerSelect
        @placeholder="Busqueda"
        @searchEnabled={{true}}
        @searchField="nombre"
        @options={{model}}
        @onChange={{action "toProfile"}} as |profile|>
        {{profile.nombre}}
      </PowerSelect>
      {{#if (eq model.firstObject._internalModel.modelName "profile")}}
        <PowerSelect
          class="my-auto ml-2 w-100"
          @placeholder="Filtrar por institución"
          @searchEnabled={{true}}
          @searchField="nombre"
          @allowClear="true"
          @selected={{this.inInstitution}}
          @options={{this.institutions}}
          @onChange={{action (mut this.inInstitution)}} as |profile|>
          {{profile.nombre}}
        </PowerSelect>
        <nav class="nav justify-content-center font-weight-bold">
          <div class="input-group nav-item bg-light rounded px-3 py-2 w-auto mx-2">
            <img src="img/icons/woman.png" alt="Mujer" class="mr-1">
            <label class="my-auto" for="isMujer">Mujer</label>
            <Input class="my-auto ml-2" @type="checkbox" @checked={{this.isMujer}} />
          </div>
          <div class="input-group nav-item bg-light rounded px-3 py-2 w-auto mx-2">
            <img src="img/icons/man.png" alt="Varón" class="mr-1">
            <label class="my-auto" for="isVaron">Hombre</label>
            <Input class="my-auto ml-2" @type="checkbox" @checked={{this.isVaron}} />
          </div>
        </nav>
      {{/if}}
    </div>
  </div>
</div>

<Portfolio
  @bg="light"
  @profiles={{this.profiles}}
  />

<div class="w-100 bg-light">
  <div class="container">
    <div class="row text-center">
      <div class="mx-auto">
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item">
              <button class="page-link" href="#" aria-label="Previous" {{on "click" this.prevPage}}>
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </button>
            </li>
            {{#each this.pages as |page|}}
              <li class="page-item {{if (eq this.page page) "active"}}">
                <button class="page-link" {{on "click" (fn this.selectPage page)}}>
                  {{page}}
                </button>
              </li>
            {{/each}}
            <li class="page-item">
              <button class="page-link" href="#" aria-label="Next" {{on "click" this.nextPage}}>
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </button>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    {{#if (eq model.firstObject._internalModel.modelName "institution")}}
      {{!-- Organigrama --}}
      <div class="row">
        <div class="col-12">
          <div class="panel">
            <div class="header d-flex bg-primary">
              <img src="img/icons/orgchart.png" alt="Iconos de personas">
              <h3>Sector Justicia</h3>
            </div>
            <div>
              <div class="body p-4">
                <Orgchart class="w-100 bg-red" />
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</div>
