    <div class="col-12 col-md-4">
      <a
        href="https://consulta2018.tse.org.gt/dondevotas.php"
        target="_blank"
        rel="noopener">
        <div class="btn btn-warning btn-square py-5">
          <img src="img/icono-donde-voto.png" alt="Icono donde voto">
          Nuestra Elección
        </div>
      </a>
    </div>
    <div class="col-12 col-md-4">
      <a
        href="http://semaforoelectoral.gt/"
        target="_blank"
        rel="noopener">
        <div class="btn btn-success btn-square py-4">
          <img src="img/icono-megafono.png" alt="Icono frente a frente">
          <div class="block">
            <p>Semáforo Electoral</p>
          </div>
        </div>
      </a>
    </div>
    <div class="col-12 col-md-4">
      <button class="btn btn-primary btn-square">
        <img src="img/icono-resultados.png" alt="Icono resultados">
        <div class="block">
          <p>Resultados</p>
          <small>Próximamente</small>
        </div>
      </button>
    </div>
  </div>
</div>

