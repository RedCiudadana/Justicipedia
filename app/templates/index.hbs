{{!-- Carousel --}}
<BsCarousel
  @autoPlay={{true}}
  as |car|>
  <car.slide>
    <img alt="Paso 1" src="img/slider-1.png" height="auto" width="100%">
  </car.slide>
</BsCarousel>

<div class="container py-5">

  {{!-- Header --}}
  <div class="row">
    <div class="col-12 text-center">
      <h4>Conoce a los candidatos y candidatas a cargos de elección popular</h4>
    </div>
  </div>

  {{!-- Filters --}}
  <div class="row filters">
    <div class="col-12 text-center">
      <BsButton @type="primary" class="active" @onClick={{action "transitionTo" "presidentes"}}>
        <div>
          <img src="img/icono-president.png" alt="Elección presidencial">
          <p>Presidencial</p>
        </div>
      </BsButton>
      <BsButton @type="primary"  @onClick={{action "transitionTo" "alcaldes"}}>
        <div>
          <img src="img/icono-mayor.png" alt="Elección municipal">
          <p>Municipal</p>
        </div>
      </BsButton>
      <BsButton @type="primary"  @onClick={{action "transitionTo" "listado"}}>
        <div>
          <img src="img/icono-listado.png" alt="Elección diputados del listado nacional">
          <p>Listado<br> nacional</p>
        </div>
      </BsButton>
      <BsButton @type="primary"  @onClick={{action "transitionTo" "distrito"}}>
        <div>
          <img src="img/icono-distrito.png" alt="Elección diputados del listado nacional">
          <p>Distrito</p>
        </div>
      </BsButton>
      <BsButton @type="primary"  @onClick={{action "transitionTo" "parlacen"}}>
        <div>
          <img src="img/icono-parlacen.png" alt="Elección diputados del parlacen">
          <p>Parlacen</p>
        </div>
      </BsButton>
    </div>
  </div>

</div>

<div class="container-fluid bg-light py-4">

  {{!-- Portofolio --}}
  <div class="row">
    <div class="col-10 offset-1">
      <div id="portfolio" class="portfolio clearfix my-4">
        {{#each pagedContent as |profile|}}
          <ItemPortfolio @profile={{profile}}></ItemPortfolio>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="container-fluid bg-dark justify-content-center py-5">
  {{!-- Fecha --}}
  <div class="row">
    <div class="col-md-4 text-center text-md-right">
      <img src="img/calendario.png" alt="Calendario: 3 de febrero.">
    </div>
    <div class="col-md-6 text-center date">
      <div>
        <h1 class="text-white">Elección: Domingo 16 de Junio</h1>
        <h3 class="text-secondary">Elecciones generales 2019</h3>
      </div>
    </div>
  </div>
</div>

<div class="container">

  {{!-- ¿Dónde voto? ¿Cuánto falta? ¡Empadrónate! --}}
