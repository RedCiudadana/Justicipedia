<div class="row m-1 my-4 bg-white panel py-5">
  {{!-- Imagen --}}
  <div class="col-md-4 text-center">
    <img
      id="photo-profile"
      src={{model.profile.photo}}
      alt={{model.profile.nombre}}
      border="0"
      class="img-responsive center-block mb-4"
    >
  </div>
  {{!-- Información general --}}
  <div class="col-md-5 border-right">
    <h3>{{model.profile.nombre}}</h3>
    <p class="font-weight-light">
      Lorem ipsum dolor sit, amet consectetur adipisicing elit. Labore sit nam consequuntur laboriosam reprehenderit architecto inventore accusantium quod. Placeat quis saepe quibusdam natus perferendis alias adipisci quae nesciunt vitae ratione!
    </p>
    <table class="table w-100">
      <tbody>
        {{#each-in campos as |key campo|}}
          <tr>
            <td>
              <strong>{{humanize (dasherize campo)}}: </strong> {{get model.profile campo}}
            </td>
          </tr>
        {{/each-in}}
      </tbody>
    </table>
  </div>
  {{!-- Información extra, redes sociales --}}
  <div class="col-md-3 social-side">
    <div class="d-block mt-3">
      {{!-- Dirección --}}
      {{!-- @TODO: Actualizar esto cuando esten bien definidos los modelos --}}
      {{#if model.profile.correo}}
        <div>
          <a href={{model.profile.web}} target="_blank" rel="noopener">
            <i class="fa fa-map-marker mx-2"></i>Guatemala, Guatemala
            {{model.profile.direccion}}
          </a>
        </div>
      {{/if}}
      {{!-- Número de teléfono --}}
      {{!-- @TODO: Actualizar esto cuando esten bien definidos los modelos --}}
      {{#if model.profile.correo}}
        <div>
          <a href={{model.profile.web}} target="_blank" rel="noopener">
            <i class="fa fa-phone mx-2"></i>Guatemala, Guatemala
            {{model.profile.phone}}
          </a>
        </div>
      {{/if}}
      {{!-- Página web --}}
      {{#if model.profile.web}}
        <div>
          <a href={{model.profile.web}} target="_blank" rel="noopener">
            <img src="img/icono-web.png" alt="Página web">
            {{model.profile.web}}
          </a>
        </div>
      {{/if}}
      {{!-- Correo --}}
      {{#if model.profile.correo}}
        <div>
          <a href={{model.profile.correo}} target="_blank" rel="noopener">
            <img src="img/icono-correo.png" alt="Correo electrónico">
            {{model.profile.correo}}
          </a>
        </div>
      {{/if}}
      {{!-- Twitter --}}
      {{#if model.profile.tw}}
        <div>
          <a href="https://twitter.com/{{twitter-link model.profile.tw}}" target="_blank" rel="noopener">
            <img src="img/icono-tw.png" alt="Twitter">
            @{{twitter-link model.profile.tw}}
          </a>
        </div>
      {{/if}}
      {{!-- Facebook --}}
      {{#if model.profile.fb}}
        <div>
          <a href={{model.profile.fb}} target="_blank" rel="noopener">
            <img src="img/icono-fb.png" alt="Facebook">
            {{model.profile.nombre}}
          </a>
        </div>
      {{/if}}
    </div>
  </div>
</div>

