<div class="row m-1 my-4 bg-white panel py-5">
  {{!-- Imagen --}}
  <div class="col-md-4 text-center">
    <img
      id="photo-profile"
      src={{model.profile.photo}}
      alt={{model.profile.nombre}}
      border="0"
      class="img-responsive center-block"
    >
  </div>
  {{!-- Información general --}}
  <div class="col">
    <h3>{{model.profile.nombre}}</h3>
    <table class="table w-100">
      <tbody>
        {{#if (eq model.profile._internalModel.modelName "institution")}}
          <tr>
            <td>
              <p class="font-weight-light">
                {{model.profile.descripcion}}
              </p>
            </td>
          </tr>
        {{/if}}
        {{#each-in campos as |key campo|}}
          <tr>
            <td>
              <strong>{{campo}}: </strong> {{get model.profile key}}
            </td>
          </tr>
        {{/each-in}}
      </tbody>
    </table>
  </div>
  {{#if (eq model.profile._internalModel.modelName "profile")}}
    <div class="col-3 text-center align-self-center">
      <h6>Documentos</h6>
      <a
        href={{model.profile.cv}}
        class="btn btn-primary text-white w-100 mb-2 {{if (is-empty model.profile.cv) "disabled"}}"
        target="_blank"
      >
        Hoja de vida (PDF)
      </a>
      <a
        href={{model.profile.expediente}}
        class="btn btn-primary text-white w-100 mb-2 {{if (is-empty model.profile.expediente) "disabled"}}"
        target="_blank"
      >
        Expediente
      </a>
      <a
        href={{model.profile.resumen}}
        class="btn btn-primary text-white w-100 {{if (is-empty model.profile.resumen) "disabled"}}"
        target="_blank"
      >
        Base de datos (Resumen)
      </a>
    </div>
  {{/if}}
</div>

{{#if (eq model.profile._internalModel.modelName "institution")}}
{{!-- Autoridades --}}
<div class="row">
  <div class="col-12">
    <div class="panel">
      <div class="header d-flex bg-primary">
        <img src="img/i-personas.png" alt="Icono años">
        <h3>Autoridades</h3>
      </div>
      <div>
        <div class="body p-1">
          {{#if model.profiles}}
            <Portfolio
              @bg="white"
              @profiles={{model.profiles}}
              @pagination={{false}}
              />
          {{else}}
            <p class="px-5 pt-3">No hay información</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
{{#if (eq model.profile._internalModel.modelName "institution")}}
{{!-- Presupuesto --}}
<div class="row">
  <div class="col-12">
    <div class="panel">
      <div class="header d-flex bg-primary">
        <img src="img/i-bolsa.png" alt="Icono bolsa de dinero">
        <h3>Presupuesto</h3>
      </div>
      <div>
        <div class="body p-1">
          {{#if this.lineData}}
          {{!-- {{#if model.profile.presupuesto}} --}}
            {{ember-chart type='line' data=lineData options=options class="p-0 p-lg-5"}}
          {{else}}
            <p class="px-5 pt-3">No hay información</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}
{{/if}}
{{#if (eq model.profile._internalModel.modelName "profile")}}
<div class="row">
  {{!-- Experiencia Académica --}}
  <div class="col-md-6">
    <div class="panel">
      <div {{action (toggle "experiencia" this)}} class="header d-flex bg-primary">
        <img src="img/icono-experiencia-academica.png" alt="Icono años">
        <h3>Experiencia Académica</h3>
        {{fa-icon (if experiencia "chevron-circle-down" "chevron-circle-up") size=2 class="my-auto ml-auto"}}
      </div>
      <BsCollapse @collapsed={{this.experiencia}}>
        <div class="body">
          {{#if model.profile.experienciaAcademica}}
            <p>{{model.profile.experienciaAcademica}}</p>
          {{else}}
            <strong>No hay datos sobre la experiencia académica.</strong>
          {{/if}}
        </div>
      </BsCollapse>
    </div>
  </div>
  {{!-- Experiencia Profesional --}}
  <div class="col-md-6">
    <div class="panel">
      <div class="header d-flex bg-primary" {{action (toggle "partidos" this)}}>
        <img src="img/icono-historial-politico.png" alt="Icono cargo">
        <h3>Experiencia Profesional</h3>
        {{fa-icon (if partidos "chevron-circle-down" "chevron-circle-up") size=2 class="my-auto ml-auto"}}
      </div>
      <BsCollapse @collapsed={{partidos}}>
        <div class="body">
          {{#if model.profile.experienciaProfesional}}
            <p>{{model.profile.experienciaProfesional}}</p>
          {{else}}
            <strong>No hay datos sobre la experiencia profesional.</strong>
          {{/if}}
        </div>
      </BsCollapse>
    </div>
  </div>
</div>
{{/if}}
{{#if (eq model.profile._internalModel.modelName "election")}}
{{!-- Comisionados --}}
<div class="row">
  <div class="col-12">
    <div class="panel">
      <div {{action (toggle "comissioners" this)}} class="header d-flex bg-primary">
        <img src="img/i-personas.png" alt="Icono años">
        <h3>Comisionados</h3>
        {{fa-icon (if comissioners "chevron-circle-down" "chevron-circle-up") size=2 class="my-auto ml-auto"}}
      </div>
      <BsCollapse @collapsed={{this.isCollapsedComissioners}}>
        <div class="body">
          {{#if model.comissioners}}
            <Portfolio
              @bg="white"
              @profiles={{model.comissioners}}
              @pagination={{false}}
              />
          {{else}}
            <p>No hay información</p>
          {{/if}}
        </div>
      </BsCollapse>
    </div>
  </div>
</div>
{{/if}}